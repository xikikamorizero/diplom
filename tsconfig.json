{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/features/module/module.js", "src/page/Main/Main.jsx", "src/page/EditPortfolio/EditPortfolio.jsx", "src/widgets/CreatePortfolio/CreatePortfolio.tsx", "src/page/PortfolioItem/PortfolioItem.tsx", "src/widgets/PortfolioItem/PortfolioItem.tsx", "src/widgets/Lesson/Lesson.tsx"],
  "exclude": ["node_modules"]
}
